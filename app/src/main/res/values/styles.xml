<resources>

    <style name="AppMaterialTheme" parent="SuperMaterialTheme">

    </style>


    <style name="SuperMaterialTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Parent theme for all versions/devices -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Color-Action for different widget -->
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:itemBackground">@color/grey100</item>

        <!-- Material Dialog Paramters -->
        <item name="md_background_color">@color/grey100</item>
        <item name="md_title_color">@color/colorPrimaryDark</item>
        <item name="md_link_color">@color/colorPrimary</item>
        <item name="md_widget_color">@color/colorPrimary</item>
        <item name="md_positive_color">@color/colorPrimary</item>
        <item name="md_neutral_color">@color/colorPrimary</item>
        <item name="md_negative_color">@color/colorPrimary</item>

    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">23sp</item>
        <item name="android:textColor">@color/colorPrimaryBlack</item>
    </style>

    <style name="TransactionDialog" parent="@android:style/Theme.Translucent.NoTitleBar">
        <item name="android:windowFullscreen">false</item>
    </style>

</resources>
